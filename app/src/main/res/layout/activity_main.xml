<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fullscreen_content_controls"

    android:background="#ECF4F9"
    android:orientation="vertical"
    android:baselineAligned="true">

    <com.example.hufz.myapplication.TempControlView
        android:id="@+id/temp_control"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" />

    <Button
        android:id="@+id/Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="@string/Time_setting"
        android:layout_below="@+id/temp_control"
        android:layout_alignEnd="@+id/temp_control" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="SetBc"
        android:layout_alignStart="@+id/temp_control"
        android:layout_alignTop="@+id/Button"
        android:visibility="invisible"
        android:text="B/L" />

    <Button
        android:id="@+id/button_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/button"
        android:visibility="invisible"
        android:layout_alignStart="@+id/button" />

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:visibility="invisible"

        />

</RelativeLayout>

