<?xml version="1.0" encoding="utf-8"?>
<!--调试时需要确认SD卡相应位置存在指定的文件-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.example.hufz.myapplication.TempControlView
        android:id="@+id/work_control"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />



    <VideoView
        android:id="@+id/vv_videoview"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_play"
        android:layout_width="50dip"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/vv_videoview"
        android:layout_marginTop="16dp"
        android:text="@string/Play" />

    <Button
        android:id="@+id/btn_replay"
        android:layout_width="50dip"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_play"
        android:layout_alignBottom="@+id/btn_play"
        android:layout_marginStart="22dp"
        android:layout_toEndOf="@+id/btn_play"
        android:text="@string/Replay" />

</LinearLayout>
